<Page
    x:Class="TestDB.DBgrid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TestDB"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <RelativePanel>
            <ListView x:ConnectionId='3' Name="InventoryList"
                  SelectionMode="Single"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.IsVerticalRailEnabled="True"
                  ScrollViewer.VerticalScrollMode="Enabled"
                  ScrollViewer.HorizontalScrollMode="Enabled"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.IsHorizontalRailEnabled="True" Height="902" Width="1356">
                <ListView.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal"  >
                            <TextBlock Text="Имя площадки" Margin="10" Width="140" Foreground="DarkRed" />
                            <TextBlock Text="Код фил" Margin="10" Width="100" Foreground="DarkRed" />
                            <TextBlock Text="Код Пред" Margin="10" Width="100" Foreground="DarkRed" />
                            <TextBlock Text="API логин" Margin="10" Width="100" Foreground="DarkRed" />
                            <TextBlock Text="API пароль" Margin="10" Width="100" Foreground="DarkRed" />
                            <TextBlock Text="Пользователь" Margin="10" Width="150" Foreground="DarkRed" />
                            <TextBlock Text="GUID Предприятия" Margin="10" Width="150" Foreground="DarkRed" />
                            <TextBlock Text="GUID Площадки" Margin="10" Width="150" Foreground="DarkRed" />
                            <TextBlock Text="API Key" Margin="10" Width="130" Foreground="DarkRed" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.HeaderTemplate>
                <ListView.ItemTemplate>
                    <DataTemplate                        >
                        <StackPanel x:ConnectionId='6' Orientation="Horizontal" >
                            <TextBlock x:ConnectionId='7' Name="ItemId"
                                                               
                                    Width="140"
                                       Margin="10"/>
                            <TextBlock x:ConnectionId='8' Name="ItemName"
                                                           
                                    Width="100"
                                       Margin="10"/>
                            <TextBlock x:ConnectionId='9'                         
                                   Width="100"
                                       Margin="10"/>
                            <TextBlock x:ConnectionId='10'                         
                                   Width="100"
                                       Margin="10"/>
                            <TextBlock x:ConnectionId='11'                        
                                   Width="100"
                                       Margin="10"/>
                            <TextBlock x:ConnectionId='12'                     
                                   Width="100"
                                       Margin="10"/>
                            <TextBlock x:ConnectionId='13'                            
                                   Width="150"
                                       Margin="10"/>
                            <TextBlock x:ConnectionId='14'                          
                                   Width="150"
                                       Margin="10"/>
                            <TextBlock x:ConnectionId='15'                       
                                   Width="130"
                                       Margin="10"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </RelativePanel>
        <HyperlinkButton x:ConnectionId='2' Content="Back" Margin="32,924,0,0" VerticalAlignment="Top" Height="66" Width="164"                               Background="#FFBFBFBF" Foreground="Black" FontSize="36"/>

    </Grid>
</Page>

